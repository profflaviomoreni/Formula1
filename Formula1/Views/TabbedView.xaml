            xmlns:vm="clr-namespace:Formula1.ViewModel"
             x:Class="Formula1.Views.TabbedView">
    
    <view:DriversView>
        <x:Arguments>
            <vm:DriversViewModel/>
        </x:Arguments>
    </view:DriversView>
    
    <view:RacesView>
